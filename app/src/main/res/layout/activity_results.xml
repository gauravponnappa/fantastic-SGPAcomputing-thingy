<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".results">


    <com.lalongooo.Rings
        android:id="@+id/rings"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rings_inner_first_color="#FF9F1C"
        app:rings_inner_first_progress="0"
        app:rings_inner_first_text="Total"
        app:rings_inner_second_color="#4BC6B9"
        app:rings_inner_second_progress="0"
        app:rings_inner_second_text="Percentage"
        app:rings_inner_third_color="#EA3546"
        app:rings_inner_third_progress="0"
        app:rings_inner_third_text="SGPA"
        app:rings_overall_color="#746AB0"
        app:rings_overall_progress="0"
        app:rings_overall_text="Overall"
        app:rings_text_size="15sp"
        app:rings_unfinished_color="#000000" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Total marks acquired" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/totalm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"

                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Total Prcentage acquired" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/per"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"

                android:text="TextView" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Total SGPA obtained" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sgpa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:text="TextView" />
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>